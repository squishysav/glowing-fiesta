    GM_addStyle(".quick-reply .reply-button{background-color: #38ECEC !important;border-radius: 5px 10px;}");

//"new" icons
    GM_addStyle(".new-icon:hover{background:#38ECEC;}");
    GM_addStyle(".new .new-icon{background-color: #38ECEC;}");
//pop-up.html
    GM_addStyle(".popup_html ul{display:none;list-style-type:none;border:1px solid #000000;background-color: #000000 !important;opacity: 1.0 !important;}");
    GM_addStyle(".popup_html li:hover,.popup_html .ui-menu li:hover{color:#efefef;background-color:#000000;}");
      // -- Profile
//background
    GM_addStyle(".container.show-user{background-color: #000000; opacity: 0.69;}");
//nav buttons
    GM_addStyle(".ui-tabMenu ul{background: #000000;border:1px solid #000000}");
//nav list buttons
    GM_addStyle(".ui-tabMenu ul li{background: #000000;opacity: 0.62;}");
//nav list text
    GM_addStyle(".ui-tabMenu ul li a{color:#efefef;background-color: #000000;font:100% Verdana,Arial;text-decoration:none;border-radius: 10px 8.5px 0px 0px;border: hidden;}");
//hover
    GM_addStyle(".ui-tabMenu ul li:hover{background:#007aac; opacity:0.8;border-radius:5px 5px 0 0;}");
//hover text
    GM_addStyle(".ui-tabMenu ul li:hover a{color:#efefef;font:100% Verdana,Arial;text-decoration:none;}");
//selected nav button background
    GM_addStyle(".ui-tabMenu ul li.ui-active{background:#38ECEC !important; opacity:6.2;}");
//seleted nav button text
    GM_addStyle(".ui-tabMenu ul li.ui-active a{color:#efefef;text-decoration:none;}");
    // - - Search
    GM_addStyle(".container.search{background-color:#000000; opacity:0.65;}");
    // - - Memebers
    GM_addStyle(".members table.list{background-color:#000000; opacity:0.65;}");
    // - - Drafts
    GM_addStyle(".head{color:#ffffff;background-color:#000000; opacity:0.82;}");
