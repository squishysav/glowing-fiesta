    GM_addStyle(".conversations .latest{background-color:#000000; opacity:0.65;}");
    GM_addStyle(".messages .item{color:#efefef;background: #000000;opacity: 0.69;border: hidden;}");
    GM_addStyle(".messages .item.even{color:#efefef;background: #000000;opacity: 0.82;border: hidden;}");
    GM_addStyle(".messages .participants{background-color: #000000;opacity: 0.85;}");
