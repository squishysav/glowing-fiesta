(function() {
    'use strict';
    
//welcome menu
    //welcome menu background
    GM_addStyle("#b2{ background-color: #000000; opacity: 0.87; border: 1px solid #000; border-bottom: none; height: 26px;}");
    //welcome menu text color
    GM_addStyle("#welcome a, #b2 *{ color: #fff;}");
//navigation buttons
    //navigation main && text
    GM_addStyle(" #navigation-menu>ul li{ background-color: #000000; opacity: 0.62; border-radius: 10px 8.5px 0px 0px; padding: 1px; border-top:1px solid #000000; border-left: 1px solid #000000; border-right: 2px solid #000000; border-bottom: 1px solid #000000;} #navigation-menu>ul li a{ color: #ffffff; opacity: .62; font: 1em Verdana, Arial;}");
    //navigation hover
    GM_addStyle("#navigation-menu> ul li:hover a{ color: #ffffff !important; opacity: 1.0;  font: 1em Verdana, Arial; !important; background:#000000; border-radius: 15px 50px 30px}");
    //selected navagation
    GM_addStyle("#navigation-menu>ul li a.state-active{ color: #ffffff !important; opacity: 1.0; font: 1em Verdana, Arial; background:#000000; border-radius: 15px 50px 30px}");
