    GM_addStyle("#navigation-tree{background:#000000 !important; opacity: 0.72}");
    GM_addStyle(".menu_arrow span{border-color:transparent transparent transparent #38ECEC !important;}");
    GM_addStyle("#nav-tree>li:hover,#nav-tree .ui-menu li:hover{color:#efefef;background-color:#000000;}");
//particapated
    GM_addStyle(".recent-threads-button{background-color: #000000!important; opacity:0.72}");
