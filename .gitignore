    GM_addStyle(".container>.control-bar{ background-color:#000000 !important; opacity: 0.79; border-bottom: 1px solid #000 !important; color: #000000 !important;}");
    GM_addStyle(".ui-pagination li.state-selected>a{ background-color: #000000 !important; opacity: 0.7; color:#fff !important;}");
//caterogies
    //background
     GM_addStyle(".boards table.list>tbody>tr>td{ background-color: #000000; opacity: 0.72;}");
